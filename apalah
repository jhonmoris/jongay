# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]

# 1. JIKA ada file fisik (gambar, pdf, dll), JANGAN diredirect ke home
RewriteCond %{REQUEST_FILENAME} !-f

# 2. JIKA ada folder/direktori fisik, JANGAN diredirect ke home
RewriteCond %{REQUEST_FILENAME} !-d

# 3. Jika poin 1 & 2 tidak terpenuhi, barulah kirim ke index.php
RewriteRule . /index.php [L]
</IfModule>
# END WordPress
